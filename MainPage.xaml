<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mchuquinT1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Tarea 1"
                TextColor="Black"
                FontSize="24"
                HorizontalTextAlignment="Center">

            </Label>
                <Entry
                x:Name="txtNombre"
                Placeholder="Ingrese su nombre"/>
                <Entry 
                x:Name="txtApellido"
                Placeholder="Ingrese su apellido"/>
                <Entry 
                x:Name="txtEdad"
                Placeholder="Ingrese su edad"
                Keyboard="Numeric"/>
                <Entry 
                x:Name="txtSueldo"
                Placeholder="ingrese su salario actual"/>


            <Button
                    x:Name="btnCalculo"
                    Text="Calcular"
                    Clicked="btnCalculo_Clicked"
                    HorizontalOptions="Center"
         
                    />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
